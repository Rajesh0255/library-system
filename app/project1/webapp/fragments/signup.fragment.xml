<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idsignupDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Sign up"
    >
    <beginButton>
            <Button
                id="idCreateButton2"
                text="CreateAccount"
                press="onSignUp1"
                type="Emphasized"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton3"
                text="Cancel"
                press="onCloseDialog3"
                type="Negative"
            />
        </endButton>
            <form:SimpleForm
                id="idSimpleForm1"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
                
            >
                <form:content>
                      <Label
                        class="Name"
                        text="Name"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="Name"
                        placeholder="Enter Name"
                        width="100%"
                        textAlign="Initial"
                        value="{localModel>/name}"
                    />
 
                    <Label
                        class="username"
                        text="User name"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="user1"
                        placeholder="Enter Username"
                        width="100%"
                        textAlign="Initial"
                        value="{localModel>/username}"
                    />

                    <Label
                        class="userType"
                        text="User Type"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="userType"
                        placeholder="Enter UserType"
                        width="100%"
                        textAlign="Initial"
                        value="{localModel>/usertype}"
                    />
 
 
                    <Label
                        class="Password"
                        text="Password"
                        textAlign="Initial"
                    />
                    <Input
                        id="password1"
                        type="Password"
                        placeholder="Enter Password"
                        width="100%"
                        textAlign="Initial"
                        value="{localModel>/password}"
                    />
 
                    <!-- <Label
                        class="confirmPassword"
                        text="Confirm Password"
                        textAlign="Initial"
                    />
                    <Input
                        class="input"
                        id="confirmPassword"
                        type="Password"
                        placeholder="Enter Confirm Password"
                        width="100%"
                        textAlign="Initial"
                        value="{localModel>/confirmpassword}"
                    /> -->
                    <core:Title />
                </form:content>
            </form:SimpleForm>
     
    </Dialog>
</core:FragmentDefinition>