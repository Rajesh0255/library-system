<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="Edit"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Edit Books"
    >
   
        <beginButton>
            <Button
                id="idSaveButton"
                text="Save"
                press="onSave"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelEditButton"
                text="Cancel"
                press="onCancelEdit"
                type="Negative"
            />
        </endButton>
   
        <content>
            <form:SimpleForm
                id="idBookDetailsEdit"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idtitleLabelEdit"
                    text="Title"
                />
                <Input
                    id="idtitleInputEdit"
                    value="{newBookModel>/title}"
                />
                <Label
                    id="idAuthorEdit"
                    text="Author"
                />
                <Input 
                    id="idAuthorInputEdit"
                    value="{newBookModel>/author}"
                />
                <Label
                    id="idISBNLabelEdit"
                    text="ISBN"
                />
                <Input
                    id="idISBNInputEdit"
                    value="{newBookModel>/ISBN}"
                />
                <Label
                    id="idQuantityEdit"
                    text="Quantity"
                />
                <Input 
                    id="idQuantityInputEdit"
                    value="{newBookModel>/quantity}"
                />
             
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>