<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="dialog1"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Add Books"
    >
   
        <beginButton>
            <Button
                id="idConfirmButton"
                text="Confirm"
                press="onConfirm"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancel2Button"
                text="Cancel"
                press="onCancelDialog2"
                type="Negative"
            />
        </endButton>
   
        <content>
            <form:SimpleForm
                id="idBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idtitleLabel"
                    text="Title"
                />
                <Input
                    id="idtitleInput"
                    value="{localModel>/title}"
                    required="true"
                    valueStateText="Title is required"
                />
                <Label
                    id="idAuthor"
                    text="Author"
                />
                <Input 
                    id="idAuthorInput"
                    value="{localModel>/author}"
                    required="true"
                    valueStateText="Author is required"
                />
                <Label
                    id="idISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idISBNInput"
                    value="{localModel>/ISBN}"
                    required="true"
                    valueStateText="ISBN is required"
                />
                <Label
                    id="idQuantity"
                    text="Quantity"
                />
                <Input 
                    id="idQuantityInput"
                    value="{localModel>/quantity}"
                    required="true"
                    valueStateText="Quantity is required"
                />
             
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>